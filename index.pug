<!DOCTYPE html>
html(lang="fr")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Mobile First Menu Bar - HTML, CSS, JS

    // CSS
    link(rel="stylesheet", href="assets/css/index.css")

  body
    //HEADER
    .header
      a(href="").header__logo Codwerk
      ion-icon(name="menu-outline").header__toggle#nav-toggle

      nav.nav#nav-menu
        .nav__content.bg-grid
        
          ion-icon(name="close-outline").nav__close#nav-close

          .nav__profil
            .nav__img
              ion-icon(name="person-circle-outline")
            div
              a(href="#").nav__name Codwerk
              span.nav__job Int√©grateur Front End
          
          .nav__menu
            ul.nav__list
              each val, index in ['home', 'about', 'skills','portfolio', 'contact']
                li.nav__item
                  a(href="#" "class"=( index == 0 ? "active" : "")).nav__link= val
      
          .nav__social
            each val, index in ['logo-github', 'logo-instagram', 'logo-twitter']
              a(href="#").nav__social-icon 
                ion-icon(name= val)

    // IONICONS
    script(src="https://unpkg.com/ionicons@5.1.2/dist/ionicons.js")
    // MAIN
    script(src="assets/js/index.js")